@model EditTaskViewModel

<h1>Úprava úkolu</h1>

<form asp-controller="ProjectTask" asp-action="EditTask" method="post">
    <input type="hidden" asp-for="Task.Id" name="Id"/>
    <input type="hidden" name="projectID" value="@Model.Task.Project.Id" />

    <div class="form-group">
        <label asp-for="Task.Name">Název úkolu</label>
        <input asp-for="Task.Name" class="form-control" name="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Task.Description">Popis úkolu</label>
        <input asp-for="Task.Description" class="form-control" name="Description"/>
    </div>

    <div class="form-group">
        <label asp-for="Task.SelectedStatusId">Status úkolu</label>
        <select asp-for="Task.SelectedStatusId" asp-items="new SelectList(Model.Statuses, nameof(ProjectTaskStatus.Id), nameof(ProjectTaskStatus.Name))" class="form-control" name="SelectedStatusId">
            <option value="">Vyberte status</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Task.SelectedPriorityId">Priorita úkolu</label>
        <select asp-for="Task.SelectedPriorityId" asp-items="new SelectList(Model.Priorities, nameof(ProjectTaskPriority.Id), nameof(ProjectTaskPriority.Name))" class="form-control" name="SelectedPriorityId">
            <option value="">Vyberte prioritu</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Task.Deadline">Deadline</label>
        <input asp-for="Task.Deadline" type="datetime-local" class="form-control" name="Deadline"/>
    </div>

    <button type="submit" class="btn btn-primary">Upravit úkol</button>
</form>

<a asp-controller="ProjectTask" asp-action="Detail" asp-route-id="@Model.Task.Id" asp-route-projectID="@Model.Task.Project.Id">Zpět na detaily úkolu</a>
